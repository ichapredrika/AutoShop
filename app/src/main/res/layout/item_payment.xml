<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_black_gradient"
        android:orientation="vertical"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:textColor="@color/colorWhite"
                android:textSize="15sp"
                android:textStyle="bold"
                tools:text="Customer Name" />

            <Button
                android:id="@+id/btn_contact"
                style="@style/Button.Neutral"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="@string/contact"
                android:textAllCaps="false" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_brand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="4dp"
                android:textColor="@color/colorWhite"
                android:textSize="15sp"
                tools:text="Brand" />

            <TextView
                android:id="@+id/txt_model"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:textSize="15sp"
                tools:text="Model" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_total"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:textColor="@color/colorWhite"
                android:textSize="15sp"
                android:textStyle="bold"
                tools:text="Rp 500.000" />

            <Button
                android:id="@+id/btn_confirm"
                style="@style/Button.Neutral"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:text="@string/confirm"
                android:textAllCaps="false" />
        </LinearLayout>

        <ImageView
            android:id="@+id/img_map"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="4dp"
            android:layout_gravity="end"
            android:src="@drawable/ic_map" />
        <TextView
            android:id="@+id/txt_proof"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/payment_proof"
            android:textColor="@color/colorWhite"
            android:visibility="gone"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_proof"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="start"
                android:visibility="gone"/>

           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:gravity="end"
               android:layout_weight="1"
               android:orientation="vertical">

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="4dp"
                   android:orientation="horizontal">

                   <TextView
                       android:id="@+id/txt_pickup_option"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:gravity="end"
                       android:textColor="@color/colorWhite"
                       tools:text="AUTOSHOP DELIVERY"/>

                   <TextView
                       android:id="@+id/txt_date"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textColor="@color/colorWhite"
                       android:layout_weight="1"
                       android:gravity="end"
                       tools:text="date"/>

                   <TextView
                       android:id="@+id/txt_time"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textColor="@color/colorWhite"
                       android:gravity="end"
                       android:layout_weight="1"
                       tools:text="time"/>
               </LinearLayout>


               <TextView
                   android:id="@+id/txt_status"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:layout_marginTop="4dp"
                   android:textColor="@color/colorWhite"
                   tools:text="ON DELIVERY"/>
           </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>