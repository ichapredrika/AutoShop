<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_black_gradient"
        android:orientation="vertical"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:textColor="@color/colorWhite"
                android:textSize="15sp"
                android:textStyle="bold"
                tools:text="Autoshop Name" />

            <Button
                android:id="@+id/btn_reissue"
                style="@style/Button.Neutral"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="@string/reissue"
                android:textAllCaps="false" />
        </LinearLayout>

        <TextView
            android:id="@+id/txt_vehicle_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:textSize="15sp"
            tools:text="Vehicle Name" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:text="@string/total"
                android:textColor="@color/colorWhite"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/txt_total"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:gravity="end"
                android:textColor="@color/colorWhite"
                android:textSize="15sp"
                android:textStyle="bold"
                tools:text="Rp 500.000" />
        </LinearLayout>
        <TextView
            android:layout_marginTop="4dp"
            android:id="@+id/txt_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="FINISHED"
            android:gravity="end"
            android:textColor="@color/colorWhite"/>
    </LinearLayout>
</LinearLayout>